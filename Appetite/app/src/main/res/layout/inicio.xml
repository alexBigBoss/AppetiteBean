<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Noticias"
    style="@android:style/Theme.Light"
    android:background="#ffffff">

    <Button
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:id="@+id/btnReservar"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal|top|center"
        android:background="#d00505"
        android:clickable="true"
        android:enabled="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="sans"
        android:visibility="visible"
        android:layout_columnSpan="5"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_width="178dp"
        android:layout_height="147dp"
        android:id="@+id/btnPromo1"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="top|left"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2" />

    <ImageButton
        android:layout_width="178dp"
        android:layout_height="147dp"
        android:id="@+id/btnPromo2"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_rowSpan="2"
        android:layout_columnSpan="5" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="51dp"
        android:id="@+id/btnPromo3"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal|top|center"
        android:layout_columnSpan="7"
        android:layout_rowSpan="5" />

    <ImageButton
        android:layout_width="146dp"
        android:layout_height="117dp"
        android:id="@+id/btnPromo4"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="top|left"
        android:layout_columnSpan="2" />

    <ImageButton
        android:layout_width="144dp"
        android:layout_height="120dp"
        android:id="@+id/btnPromo6"
        android:layout_row="9"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_columnSpan="2"
        android:layout_rowSpan="10" />

    <ImageButton
        android:layout_width="213dp"
        android:layout_height="239dp"
        android:id="@+id/btnPromo5"
        android:layout_row="8"
        android:layout_column="3"
        android:layout_gravity="top|left|right"
        android:layout_columnSpan="5"
        android:layout_rowSpan="10" />

</GridLayout>
